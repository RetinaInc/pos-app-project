@model POS.ProductManager.Models.Domain.Product

@{
    ViewBag.Title = "Delete";

}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">Product</div>
        <div class="panel-body">
            <h2>@Html.DisplayFor(model => model.Name)</h2>
        </div>

        <!-- List group -->
        <ul class="list-group">
            <li class="list-group-item">
                @Html.DisplayNameFor(model => model.ProductStoreId) : @Html.DisplayFor(model => model.ProductStoreId)
            </li>
            <li class="list-group-item">
                @Html.DisplayNameFor(model => model.Category.CategoryStoreId) : @Html.DisplayFor(model => model.Category.CategoryStoreId)
            </li>
            <li class="list-group-item">
                @Html.DisplayNameFor(model => model.Created) : @Html.DisplayFor(model => model.Created)
            </li>
        </ul>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group pull-right">
            <input type="submit" value="Delete" class="btn btn-danger" />&nbsp;
            <a href="@Url.Action("Index")">
                <input type="button" class="btn btn-default" value="Cancel"/>
            </a>
        </div>
        <br/><br/>
    }
</div>
